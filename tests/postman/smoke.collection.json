{
  "name": "Swagger UI",
  "request": { "method": "GET", "url": "{{BASE_URL}}/swagger/index.html" },
  "event": [{
    "listen": "test",
    "script": {
      "type": "text/javascript",
      "exec": [
        "pm.test('2xx/3xx status for swagger', () => pm.response.code >= 200 && pm.response.code < 400);",
        "pm.test('contains Swagger UI', () => pm.response.text().toLowerCase().includes('swagger'));"
      ]
    }
  }]
}
